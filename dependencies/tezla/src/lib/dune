(* -*- tuareg -*- *)

let preprocess =
  match Sys.getenv "BISECT_ENABLE" with
  | "yes" -> "(preprocess (pps bisect_ppx))"
  | _ -> ""
  | exception Not_found -> ""

let () = Jbuild_plugin.V1.send @@ {|

(library
 (name tezla)
 (public_name tezla)
 (libraries michelson zarith batteries)
 (synopsis "Michelson front end for Softcheck.")
 |} ^ preprocess ^ {|)

|}
